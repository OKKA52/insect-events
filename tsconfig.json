{
  "compilerOptions": {
    "types": [
      "node",
      "ws",
      "@testing-library/jest-dom" // jestの型定義を残している場合
    ],
    "target": "esnext", // モダンなJSを使用
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node", // 重複していた部分を整理
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve", // ReactのJSXサポート
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "~/*": ["./public/*"]
    },
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
  "exclude": ["node_modules"]
}
